{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [ "./node_modules/@types", "../node_modules/@types", "../../node_modules/@types" ]
  },
  "exclude": ["node_modules", "dist"]
}
